<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- NORMAL SALE ORDER REPORT -->
        <template id="sale_order_report_customer" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@class='page']" position="replace">
                <div class="page">
                    <style type="text/css">
                    </style>
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-3 col-xs-offset-6">
                            <div t-field="doc.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                        </div>
                        <div class="col-xs-3 col-xs-offset-6">
                            <span t-esc="doc.create_date" t-esc-options='{"format": "d MMMM y"}'/>
                        </div>
                        <div class="col-xs-3 col-xs-offset-1">
                            Our ref: <span t-field="doc.reference_auto" />
                        </div>
                        <div class="col-xs-10 col-xs-offset-1">
                            <p>
                                <span t-field="doc.header_text" />
                            </p>

                            <t t-foreach="doc.order_line" t-as="l">
                                <div>
                                    <h4><u><span t-field="l.name" /></u></h4>
                                    <p>
                                        <span t-field="l.description_structured" />
                                    </p>
                                </div>
                            </t>

                            <div class="col-xs-4 pull-right">
                                Total : <span t-field="doc.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/> HTVA
                            </div>

                            <p>
                                <span t-field="doc.footer_text" />
                            </p>

                            <t t-if="doc.note">
                                <p>
                                    <span t-field="doc.note" />
                                </p>
                            </t>

                            <div class="col-xs-3 col-xs-offset-6">
                                <span t-field="doc.user_id.name" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <!-- TECHNICAL SALE ORDER REPORT -->
        <report
			id="sale_order_technical_report"
			string="Technical Report"
			model="sale.order" 
			report_type="qweb-pdf"
			file="technical_report" 
			name="glass.sale_order_technical_report_template"
			/>

        <template id="sale_order_technical_report_template">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="glass.sale_order_technical_report_document" t-lang="o.partner_id.lang"/>
				</t>
			</t>
		</template>

		<template id="sale_order_technical_report_document">
			<t t-name="glass.sale_order_technical_report_document">
                <div class="page">
                    <style type="text/css">
                    </style>
                </div>
            </t>
        </template>

        <!-- FULL SALE ORDER REPORT -->
        <report
			id="sale_order_full_report"
			string="Full Report"
			model="sale.order" 
			report_type="qweb-pdf"
			file="technical_report" 
			name="glass.sale_order_ful_report_template"
			/>

        <template id="sale_order_ful_report_template">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="glass.sale_order_full_report_document" t-lang="o.partner_id.lang"/>
				</t>
			</t>
		</template>

		<template id="sale_order_full_report_document">
			<t t-name="glass.sale_order_technical_report_document">
                <div class="page">
                    <style type="text/css">
                    </style>
                </div>
            </t>
        </template>
    </data>
</openerp>