<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product_product_glass_form">
            <field name="name">product_product_glass_form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <page name="sales" position="after">
                    <page string="Glass">
                        <group string="Settings">
                            <field name="maximum_area_possible" />
                            <field name="maximum_area_substitute" domain="[('categ_id', '=ilike', 'vitrages'), ('id', '!=', id)]"/>
                            <field name="minimum_invoiceable"/>
                        </group>
                        <group string="Presets">
                            <field name="glass_back_id" string="Glass 02 (Back)" />
                            <field name="glass_middle_id" string="Glass 03 (Middle)" />
                        </group>
                    </page>
                </page>
                <xpath expr="//field[@name='lst_price']" position="after">
                    <field name="price_with_auto_margin" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>
